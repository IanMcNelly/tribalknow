
= simple_form_for(@topic) do |f|
  - f.error_notification
  .row
    .column.large-7
      .row
        .large-6.columns
          = f.input :name, placeholder:'A name for your topic'
        .large-6.columns
          = f.input :parent_topic_id, collection: Topic.topic_select, :selected=>@topic.parent_topic_id, :include_blank=>true, :hint=>'Leave blank to make a root topic', input_html: {style:'min-width:50%', class:'select2'}
      .row
        .large-10.columns
          = f.input :description
    .column.large-5
      .row
        .columns.large-12{:style=>'border:1px solid green;'}
          XXX
  .row
    .large-8.columns
      = f.input :tags, collection: Tag.all.map {|t| [t.name, t.name]}, input_html: {multiple:true, class:'select2', style:'min-width:50%; height:36px;'}
  .row
    %br/
    .large-12.columns
      #in{style: "height: 25em; min-height:25em;"}
        = f.text_area :content
      #out{style: "min-height: 20em;"}
  .actions
    = yield :form_nav
    = f.submit "Save", :class => 'button has-tip', :title=>'Tip: CMD-s saves when in the editor!', :data=>{:tooltip=>""}

- content_for :post_body_js do
  = javascript_tag do
    $(function() {
    $('.CodeMirror').css({'height': '25em'});
    });
