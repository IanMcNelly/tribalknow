%nav.top-bar{"data-topbar" => ""}
  %ul.title-area
    %li.name
      %h1
        %a{:href => "/"}
          = [current_tenant && current_tenant.name, "<b style='color:#008CBA'>#{Tenant.default_title}</b>"].join(' ').html_safe
    %li.toggle-topbar.menu-icon
      %a{:href => "#"} Menu
  %section.top-bar-section
    / Right Nav Section
    %ul.right
      %li.divider.hide-for-small
      - if user_signed_in?
        %ul.navbar_avatar.right
          = current_user && link_to(account_path, :class=>'nav_avatar') do
            = render_avatar(current_user, :size=>43)
        %li= link_to "Docs", docs_path, :class=>'highlight'
        %li= link_to "Questions", questions_path, :class=>'highlight'
        %li= link_to "Topics", topics_path, :class=>'highlight'
        - if current_user && current_user.admin?
          %li= link_to "Admin", admin_home_index_path, :class=>'highlight'

        %li.has-dropdown
          %a.highlight{:href => "#"} Do Things
          %ul.dropdown
            %li= link_to "Ask new question", new_question_path, :class=>'highlight'
            %li
              %a.highlight{:href => "#"} Your Achievements (todo)
            %li= link_to "Your Account", account_path, :class=>'highlight'
            %li.divider
            %li
              %a.highlight{:href => "#"} FAQ (todo)
            %li= link_to "About this site â†’".html_safe, about_path, :class=>'highlight'
        %li.divider

        %li.has-form
          = form_tag searches_path, :method=>:get do
            .row.collapse
              .small-8.columns
                = search_field_tag :q
              .small-4.columns
                = submit_tag 'Search', :name=>'', :class=>'button'
      %li.divider.show-for-small
      - if current_tenant
        %li.has-form
          - if user_signed_in?
            = link_to "Sign Out", destroy_user_session_path, {:method=>:delete, :class=>'button'}
          - else
            = link_to "Sign in/Sign up", new_user_session_path, {:class=>'button'}
= javascript_include_tag "autocomplete"
