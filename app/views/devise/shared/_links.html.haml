%hr
.row
  .columns.large-10.large-centered
    %ul.inline-list
      - if controller_name != 'sessions'
        %li{style:"padding-right:1.5em;"}= link_to "Sign in", new_session_path(resource_name)
      - if devise_mapping.registerable? && controller_name != 'registrations'
        %li{style:"padding-right:1.5em;"}= link_to "Sign up for an account", new_registration_path(resource_name)
      - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
        %li{style:"padding-right:1.5em;"}= link_to "Forgot your password?", new_password_path(resource_name)
      - if devise_mapping.confirmable? && controller_name != 'confirmations'
        %li{style:"padding-right:1.5em;"}= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
      - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
        %li{style:"padding-right:1.5em;"}= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)

/
  <haml_silent> if devise_mapping.omniauthable?
  </haml_silent><haml_block><haml_silent>   resource_class.omniauth_providers.each do |provider|
  </haml_silent><haml_block>    <haml_loud> link_to "Sign in with \#{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) </haml_loud><br />
  </haml_block></haml_block>
