
<div class='row'>
  <div class='small-8 columns'>
    <% if question.answers.empty? %>
      <h3><%= "No answers yet, be the first to add yours!" %></h3>
    <% else %>
      <h3><%= "Add your answer..." %></h3>
    <% end %>
  </div>
</div>

<br/>
<%= simple_form_for [question, Answer.new], :url=>question_answers_path(question) do |f| %>
  <div class='row'>
    <div class='small-10 columns'>
      <div class='row'>
        <div class='small-12 columns'> <%= f.text_area :text, class: 'ckeditor' %> </div>
      </div>
      <div class='row'>
        <div class='small-8 columns'> <%= f.submit 'Submit answer', :class => 'button' %> </div>
      </div>
    </div>
  </div>
<% end %>
